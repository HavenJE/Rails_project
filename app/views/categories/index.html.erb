<h1> Check Your Exercises Categories </h1> 

<% if @categories.empty? %>
    <h2> No category has been listed yet. </h2>
<% else %>

    <ol>
        <%= @categories.each do |c| %>
            
           <li> <strong> Category Name: </strong> <%= c.name %> </li> 
            <br> 
            <%= button_to "Delete Category", c, method: :delete %>
            <br> 
        <% end %> 
    </ol> 
<% end %>